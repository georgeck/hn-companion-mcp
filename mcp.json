{
  "name": "hn-companion-mcp",
  "version": "1.0.0",
  "description": "Summarize Hacker News discussions",
  "author": "",
  "endpoints": [
    {
      "name": "summarize",
      "description": "Prepare Hacker News discussions for summarization by Claude",
      "path": "/api/summarize",
      "method": "POST",
      "input": {
        "type": "object",
        "properties": {
          "input": {
            "type": "string",
            "description": "A Hacker News post ID or URL"
          }
        },
        "required": [
          "input"
        ]
      },
      "output": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "enum": [
              "success",
              "error"
            ]
          },
          "data": {
            "type": "object",
            "properties": {
              "systemPrompt": {
                "type": "string",
                "description": "System prompt for Claude"
              },
              "userPrompt": {
                "type": "string",
                "description": "User prompt for Claude with formatted comments"
              },
              "commentPathIdMapping": {
                "type": "object",
                "description": "Mapping of comment paths to comment IDs"
              },
              "postTitle": {
                "type": "string",
                "description": "Title of the Hacker News post"
              },
              "postId": {
                "type": "string",
                "description": "ID of the Hacker News post"
              },
              "commentCount": {
                "type": "number",
                "description": "Number of comments processed"
              }
            }
          },
          "error": {
            "type": "string",
            "description": "Error message if status is 'error'"
          },
          "message": {
            "type": "string",
            "description": "Additional error details if status is 'error'"
          }
        }
      }
    }
  ]
}
